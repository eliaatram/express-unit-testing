{
  "name": "express-unit-testing",
  "version": "1.0.0",
  "description": "Boilerplate express + mongoose API with unit test setup (mocha, chai, supertest, rewire, sinon)",
  "main": "index.js",
  "scripts": {
    "start": "ts-node server.ts",
    "dev": "nodemon server.js",
    "test": "mocha --watch ./src/tests/*.spec.js",
    "build": "tsc -p .",
    "compile:dry": "npx tsc --noEmit",
    "lint": "eslint",
    "verify": "npm run compile:dry && npm run lint",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "mocha": "^9.2.2",
    "nyc": "^15.1.0",
    "rewire": "^6.0.0",
    "sinon": "^13.0.1",
    "sinon-chai": "^3.7.0",
    "supertest": "^6.2.2",
    "typescript": "^5.8.2",
    "husky": "^8.0.0"
  },
  "dependencies": {
    "@types/express": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "cors": "^2.8.5",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.3",
    "express": "^4.17.3",
    "mongoose": "^6.2.6",
    "nanoid": "^3.3.1",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript-eslint": "^8.26.1"
  }
}
